<?xml version="1.0" encoding="utf-8"?>
<com.github.chdir.starwars.widget.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_search_item_bg"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    <ImageView
            android:duplicateParentState="true"
            android:id="@+id/gender_image"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_girl_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@color/bg_checkable_character_text"
    />

    <CheckedTextView
            android:id="@+id/character_info"
            android:duplicateParentState="true"
            tools:text="Character name"
            android:layout_gravity="center_vertical"
            android:textColor="@color/bg_checkable_character_text"
            android:gravity="center_vertical|left"
            android:textSize="20sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content">
    </CheckedTextView>

    <ImageView
            android:id="@+id/star_image"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/bg_checkable_character_bg_inverted"
    />
</com.github.chdir.starwars.widget.CheckableLinearLayout>